{
  "name": "alpha",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-scripts": "3.2.0"
  },
  "devDependencies": {
    "svgo": "^1.3.0",
    "@typescript-eslint/eslint-plugin": "^2.5.0",
    "eslint": "^6.5.1",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "prettier": "^1.18.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "lint": "eslint .",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "lint-staged": {
    "*.svg": [
      "svgo --config '{\"plugins\":[{\"removeUnknownsAndDefaults\":{\"keepDataAttrs\":false},\"removeDimensions\":true,\"removeViewBox\":false}]}' --",
      "prettier --single-quote --write --parser=html",
      "git add"
    ],
    "*.{css,html}": [
      "prettier --single-quote --write",
      "git add"
    ],
    "*.{js,jsx,json}": [
      "eslint . --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}

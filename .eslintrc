{
    "parser": "babel-eslint",
    "extends": [
        "react-app",
        "airbnb",
        "prettier"
    ],
    "env": {
        "browser": true,
        "jest": true
    },
    "plugins": [
        "react-hooks"
    ],
    "rules": {
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "warn",
        "jsx-a11y/label-has-for": [
            2,
            {
                "components": [
                    "label"
                ],
                "allowChildren": true
            }
        ]
    }
}